.archives-wrap
  position relative

.archive-year-wrap
  position relative
  padding-top 1rem
  &::after
    content: ''
    position: absolute
    bottom 1rem
    right 0
    left 6rem
    height border-width
    background-color: disabled-color
  .archive-year
    display inline-block
    text-decoration none
    color sea-dark
    font-size 1.5em

.archives
  @extend $base-style

.archive-article
  padding 2rem 0
  display flex
  &:not(:last-child)
    border-bottom border-width border-color dashed

.archive-article-gallery
  flex-shrink 0
  width 38.2%
  margin-right 1.5rem

.archive-article-header
  a
    text-decoration none
  .archive-article-title
    margin 0
    font-size 1.1em
  .archive-article-date
    color sea-lighter

.archive-article-footer
  margin-top: 1.5rem

.archive-article-inner
  .article-tag-list
    padding 0
    margin 0